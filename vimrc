set number
set relativenumber
set nocompatible
syntax on
set mouse+=a
set wrap
set breakindent
set showmatch
set showcmd
set wildmenu
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
set smartindent
set expandtab
set softtabstop=4
set shiftwidth=4
set scrolloff=4
set sidescrolloff=8
set cursorline
set timeoutlen=500

inoremap jj <esc>
" map <space> leader
let mapleader=" "
nnoremap <leader>q :qa<cr>
nnoremap <leader>p "+p
noremap <leader>y "+y
noremap Q q
noremap q @
