# 根据 schema 提供自动补全
"$schema" = 'https://starship.rs/config-schema.json'

command_timeout = 3000

# 在提示符之间插入空行
add_newline = true

[character]
success_symbol = '[❯](bold red)[❯](bold yellow)[❯](bold green)'
error_symbol = '[❯❯❯](bold red)'

[username]
show_always = true

[time]
disabled = false
format = '🕙[\[ $time \]]($style) '

[git_branch]
symbol = '🌱 '
truncation_length = 32
truncation_symbol = ''
ignore_branches = ['master', 'main']

[git_commit]
commit_hash_length = 6
tag_symbol = '🔖 '

[git_status]
conflicted = '🚩${count}'
ahead = '🏃💨${count}'
behind = '😰${count}'
diverged = '💣👆${ahead_count}👇${behind_count}'
up_to_date = '🚀'
untracked = '🤷${count}'
stashed = '📦${count}'
modified = '📝${count}'
staged = '👌${count}'
renamed = '✒${count}'
deleted = '🗑${count}'
{{#if windows_starship}}
windows_starship = '{{windows_starship}}'
